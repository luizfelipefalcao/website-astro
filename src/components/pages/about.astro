const i = {
    [enUS]: {
        mainImage: SmartBunny,
    },
    [enCA]: {
        mainImage: GooseFamily,
    },
    [frCA]: {
        mainImage: GooseFamily,
    },
}[language];

let styles = {
    [enUS]: {
        firstFoldBg: "bg-pale-pink",
        firstFldTitleClr: "text-deep-pink",
        firstFldTextClr: "text-grey-text",
    },
    [enCA]: {
        firstFoldBg: "bg-pale-yellow",
        firstFldTitleClr: "text-deep-yellow",
        firstFldTextClr: "text-deep-yellow",
    },
    [frCA]: {
        firstFoldBg: "bg-pale-yellow",
        firstFldTitleClr: "text-deep-yellow",
        firstFldTextClr: "text-deep-yellow",
    },
}[language];
---

<Layout title={s.tabTitle} footerMargin={false}>
    <ArtsaiPixelForNonProductPages />
    <div
        class="flex flex-col items-center lg:flex-row lg:justify-center w-full pt-6"
    >
        <div class="block">
            <Image
                class="block rounded-xl"
                src={i.mainImage}
                alt="A family of Geese"
                height={GooseFamily.height / 2}
                densities={[1.5, 2]}
            />
        </div>
        <div class="flex flex-col max-w-md p-16">
            <p class="text-[2rem] leading-[2rem] font-semibold">
                {s.mainStatement}
            </p>
            <div class="h-[2rem]"></div>
            <p class="">{s.subStatement}</p>
        </div>
    </div>
    <GooseInNumbers wrapperStyle="lg:-mt-28" topGap="lg:h-28" />
    <div class="flex w-full flex-col items-center bg-pale-turquoise p-16">
        <p class="text-deep-turquoise font-medium max-w-lg text-center">
            {s.quote}
        </p>
        <div class="h-[2rem]"></div>
        <p class="text-grey-text">{s.author}</p>
    </div>
    {
        language !== enUS && (
            <div class="flex w-full justify-center bg-white p-20">
                <div class="flex flex-col max-w-5xl">
                    <p class="text-[2rem] font-semibold pb-6">{s.ourStory}</p>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-24">
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                2017
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.hatched}
                            </p>
                            <p class="text-grey-text">{s.hatchedSub}</p>
                        </div>
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                2018
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.members}
                            </p>
                            <p class="text-grey-text">{s.membersSub}</p>
                        </div>
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                2020
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.launch}
                            </p>
                            <p class="text-grey-text">{s.launchSub}</p>
                        </div>
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                2021
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.seed}
                            </p>
                            <p class="text-grey-text">{s.seedSub}</p>
                        </div>
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                2022
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.V3}
                            </p>
                            <p class="text-grey-text">{s.V3Sub}</p>
                        </div>
                        <div class="">
                            <p class="text-[2rem] text-goose-turquoise font-semibold">
                                {s.today}
                            </p>
                            <p class="text-[1.5rem] font-medium text-night-sky py-2">
                                {s.membersToday}
                            </p>
                            <p class="text-grey-text">{s.membersTodaySub}</p>
                        </div>
                    </div>
                </div>
            </div>
        )
    }
    <div
        class=`flex flex-col lg:flex-row w-full items-center justify-center gap-28 p-20 
        ${language === enUS ? ' ':'bg-pale-pink'}`
    >
        <Image src={Yoga} width={330} alt="" />
        <div class="flex flex-col max-w-lg">
            <h2 class="text-[3rem] text-deep-pink font-semibold pb-[1rem]">
                {s.flockGrowing}
            </h2>
            <p class="text-blg pb-[2rem]">{s.growingSub}</p>
            <a
                href=`/${language}/${routes[language].careers}`
                class="text-blg text-deep-pink font-semibold">{s.goToCareers}</a
            >
        </div>
    </div>
</Layout>
