---
import Layout from "@layouts/Layout.astro";
import ProductHero from "@components/productHero.astro";
import heroImage from "@assets/productHeros/MJ_VTC.png";
import heroIcon from "@assets/products/vtc.png";
import { vtcStrings } from "strings/productHeros";
import HowToGetIt from "@components/HowToGetIt.astro";
import Faq from "@components/faq.astro";
import { vtcFAQ } from "strings/faqs.ts";
import Testimonials from "@components/testimonials.astro";
import Cta from "@components/cta.astro";
import { getLangFromUrl } from "strings/routing";

const language = getLangFromUrl(Astro.url);
const { QR, downloadLink, title } = vtcStrings[language];
---

<Layout title={title} footerMargin={false}>
  <ProductHero strings={vtcStrings} heroImage={heroImage} heroIcon={heroIcon} />
  <Faq faq={vtcFAQ} image={null} />
  <HowToGetIt />
  <Testimonials />
  <Cta QR={QR} downloadLink={downloadLink} />
</Layout>
vtcStringsvtcStrings
