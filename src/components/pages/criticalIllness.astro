---
import Layout from "@layouts/Layout.astro";
import ProductHero from "@components/productHero.astro";
import heroImage from "@assets/productHeros/MJ_critical-illness-1.webp";
import heroIcon from "@assets/products/Critical-Illness3x.png";
import { criticalIllnessStrings } from "strings/productHeros";
import HowToGetIt from "@components/HowToGetIt.astro";
import Faq from "@components/faq.astro";
import { criticalIllnessFAQ } from "strings/faqs.ts";
import Testimonials from "@components/testimonials.astro";
import Cta from "@components/cta.astro";
import { getLangFromUrl } from "strings/routing";

const language = getLangFromUrl(Astro.url);
const { QR, downloadLink, title } = criticalIllnessStrings[language];
---

<Layout title={title} footerMargin={false}>
    <ProductHero
        strings={criticalIllnessStrings}
        heroImage={heroImage}
        heroIcon={heroIcon}
    />
    <Faq faq={criticalIllnessFAQ} image={null} />
    <HowToGetIt />
    <Testimonials />
    <Cta QR={QR} downloadLink={downloadLink} />
</Layout>
