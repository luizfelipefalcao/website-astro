---
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Faq from "@components/faq.astro";
import FeatureGrid from "@components/feature-grid.astro";
import Hero from "@components/hero.astro";
import Logos from "@components/logos.astro";
import Testimonials from "@components/testimonials.astro";
import Layout from "@layouts/Layout.astro";
import { mainHero } from "strings/faqs.ts";
import Geese from "@assets/Geese-in-water-cropped.png";
import QR from "@assets/landingPage/QRCodes/SmartBunny_US_Brand_Google_ibsr3p89_qr_code.png";

const downloadLink = "https://smartbunny.onelink.me/jlpL/ibsr3p89";
---

<Layout footerMargin={false}>
    <Hero QR={QR} downloadLink={downloadLink} />
    <!-- <Container>
        <Logos />
    </Container> -->
    <Testimonials />
    <Container>
        <FeatureGrid />
    </Container>
    <Faq
        faq={mainHero}
        image={{ src: Geese, alt: "" }}
        textColour="text-deep-yellow"
        bgColour="bg-pale-yellow"
    />
    <Cta QR={QR} downloadLink={downloadLink} />
</Layout>
