---
import LandingPage from "@components/pages/promotions/landingPage.astro";
import { enCA, getLangFromUrl } from "strings/routing";
import { travelInsuranceFAQ } from "strings/faqs";
import PhoneGif from "@assets/landingPage/3-2021-Ca-Travel.gif";
import QRCode from "@assets/landingPage/QRCodes/5-ca-gd-travel.png";

const language = getLangFromUrl(Astro.url);
const s = {
  [enCA]: {
    title: "The world has changed, don’t travel without Goose",
    paragraph:
      "Things can happen, so don’t travel without medical insurance! Get up to $10 million of travel medical insurance in 60 seconds. Policies include COVID-19 coverage if eligible, as well as unstable pre-existing medical conditions. No age limit, worldwide coverage, and only 8 medical questions for travellers over the age of 60.",
    bullets: null,
    QRAlt: "Qr code to scan",
    QR: QRCode,
    downloadLink: "https://gooseinsurance.onelink.me/FVvL/4a187f04",
  },
}[language];
---

<LandingPage
  strings={s}
  heroImage={PhoneGif}
  faqStrings={travelInsuranceFAQ}
  productGridOmit={["Travel Insurance"]}
/>
